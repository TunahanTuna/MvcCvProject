@using MvcCvProject.Models.Entity
@model List<TblSkill>  
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string color = "";}
@{ string label = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">

                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">ID</th>
                                            <th>Yetenek</th>
                                            <th>Tecrübe</th>
                                            <th style="width: 40px">Oran</th>
                                            <th>Sil</th>
                                            <th>Düzenle</th>
                                        </tr>
                                    </thead>
                                    @foreach (var i in Model)
                                    {
                                        if (i.Oran < 50 && i.Oran >= 0)
                                        {
                                            color = "progress-bar bg-danger";
                                            label = "bg-danger";
                                        }
                                        else if (i.Oran < 70 && i.Oran >= 50)
                                        {
                                            color = "progress-bar bg-warning";
                                            label = "bg-warning";
                                        }
                                        else if (i.Oran < 85 && i.Oran >= 70)
                                        {
                                            color = "progress-bar bg-primary";
                                            label = "bg-primary";
                                        }
                                        else if (i.Oran <= 100 && i.Oran >= 85)
                                        {
                                            color = "progress-bar bg-success";
                                            label = "bg-success";
                                        }
                                        <tbody>
                                            <tr>
                                                <td>@i.ID</td>
                                                <td>@i.Skill</td>
                                                <td>
                                                    <div class="progress progress-xs">
                                                        <div class="@color" style="width: @i.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="badge @label">@i.Oran%</span></td>
                                                <td><a href="/Skill/SkillDelete/@i.ID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="#" class="btn btn-outline-warning">Düzenle</a></td>
                                            </tr>


                                        </tbody>
                                    }

                                </table>
                                <br />
                                <a href="#" class="btn btn-outline-info">Yetenek Ekle</a>


                            </div>
                        </div>
                        <!-- /.card -->
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
</body>
</html>